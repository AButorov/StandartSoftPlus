{
  "name": "StandartSoft Plus",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/sshd:1": {
      "version": "latest"
    }
  },
  "mounts": [
    "source=${localEnv:HOME}/.ssh,target=/home/bun/.ssh,type=bind,readonly"
  ],
  "forwardPorts": [4321],
  "portsAttributes": {
    "4321": {
      "label": "Astro Dev Server",
      "onAutoForward": "notify"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "astro-build.astro-vscode",
        "esbenp.prettier-vscode",
        "bradlc.vscode-tailwindcss"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "fish"
      }
    }
  },
  "postCreateCommand": "bun install && git config --global user.name 'AButorov' && git config --global user.email 'butorov.ap@gmail.com'",
  "remoteUser": "bun"
}
