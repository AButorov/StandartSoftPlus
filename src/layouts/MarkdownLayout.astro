---
// Layout для markdown страниц (кейсы, статьи)
import Layout from './Layout.astro';

const { frontmatter } = Astro.props;
const { title, description, pubDate, author, tags } = frontmatter;
---

<Layout title={title}>
  <article class="markdown-content">
    <!-- Шапка статьи -->
    <header class="article-header">
      <h1>{title}</h1>
      
      {description && (
        <p class="article-description">{description}</p>
      )}
      
      <div class="article-meta">
        {pubDate && (
          <time datetime={pubDate}>
            {new Date(pubDate).toLocaleDateString('ru-RU', { 
              year: 'numeric', 
              month: 'long', 
              day: 'numeric' 
            })}
          </time>
        )}
        
        {author && (
          <span class="author">• {author}</span>
        )}
      </div>
      
      {tags && tags.length > 0 && (
        <div class="tags">
          {tags.map((tag: string) => (
            <span class="tag">{tag}</span>
          ))}
        </div>
      )}
    </header>

    <!-- Контент markdown -->
    <div class="prose">
      <slot />
    </div>

    <!-- Футер статьи -->
    <footer class="article-footer">
      <a href="/portfolio" class="btn btn-secondary">← К портфолио</a>
    </footer>
  </article>
</Layout>

<style>
  .markdown-content {
    max-width: var(--max-width-narrow);
    margin: 0 auto;
  }

  /* Шапка статьи */
  .article-header {
    text-align: center;
    margin-bottom: var(--spacing-xl);
    padding-bottom: var(--spacing-lg);
    border-bottom: 2px solid var(--color-secondary);
  }

  .article-header h1 {
    margin-bottom: var(--spacing-md);
  }

  .article-description {
    font-size: 1.25rem;
    color: var(--color-text-muted);
    margin-bottom: var(--spacing-md);
  }

  .article-meta {
    font-family: var(--font-body);
    font-size: 0.9rem;
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: var(--letter-spacing-wide);
    margin-bottom: var(--spacing-md);
  }

  .author {
    margin-left: var(--spacing-xs);
  }

  /* Теги */
  .tags {
    display: flex;
    gap: var(--spacing-sm);
    justify-content: center;
    flex-wrap: wrap;
    margin-top: var(--spacing-md);
  }

  .tag {
    display: inline-block;
    padding: var(--spacing-xs) var(--spacing-sm);
    background: var(--gradient-brand);
    color: white;
    font-size: 0.85rem;
    font-family: var(--font-body);
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: var(--letter-spacing-wide);
    border-radius: var(--radius-sm);
  }

  /* Стилизация markdown контента */
  .prose {
    font-family: var(--font-body);
    line-height: 1.8;
  }

  /* Параграфы */
  .prose :global(p) {
    margin-bottom: var(--spacing-lg);
  }

  /* Заголовки в контенте */
  .prose :global(h2) {
    margin-top: var(--spacing-xl);
    margin-bottom: var(--spacing-lg);
    padding-top: var(--spacing-lg);
    border-top: 1px solid rgba(61, 17, 57, 0.1);
  }

  .prose :global(h3) {
    margin-top: var(--spacing-lg);
    margin-bottom: var(--spacing-md);
  }

  /* Списки */
  .prose :global(ul),
  .prose :global(ol) {
    margin-bottom: var(--spacing-lg);
    padding-left: var(--spacing-lg);
  }

  .prose :global(li) {
    margin-bottom: var(--spacing-sm);
  }

  .prose :global(li::marker) {
    color: var(--color-secondary);
  }

  /* Жирный текст */
  .prose :global(strong) {
    color: var(--color-primary);
    font-weight: 700;
  }

  /* Блок цитирования */
  .prose :global(blockquote) {
    border-left: 4px solid var(--color-secondary);
    padding-left: var(--spacing-lg);
    margin: var(--spacing-lg) 0;
    font-style: italic;
    color: var(--color-text-muted);
  }

  /* Код */
  .prose :global(code) {
    background: rgba(61, 17, 57, 0.05);
    padding: 0.125rem 0.375rem;
    border-radius: var(--radius-sm);
    font-size: 0.9em;
    font-family: var(--font-mono);
  }

  .prose :global(pre) {
    background: var(--color-primary);
    color: #ffffff;
    padding: var(--spacing-lg);
    border-radius: var(--radius-md);
    overflow-x: auto;
    margin: var(--spacing-lg) 0;
  }

  .prose :global(pre code) {
    background: none;
    padding: 0;
    color: inherit;
  }

  /* Изображения */
  .prose :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: var(--radius-md);
    box-shadow: var(--shadow-md);
    margin: var(--spacing-lg) 0;
  }

  /* Горизонтальная линия */
  .prose :global(hr) {
    border: none;
    height: 2px;
    background: var(--gradient-brand);
    margin: var(--spacing-xl) 0;
  }

  /* Футер статьи */
  .article-footer {
    margin-top: var(--spacing-xl);
    padding-top: var(--spacing-lg);
    border-top: 1px solid rgba(61, 17, 57, 0.1);
  }

  /* Адаптивность */
  @media (max-width: 768px) {
    .article-header h1 {
      font-size: 2.5rem;
    }

    .prose :global(h2) {
      font-size: 1.75rem;
    }

    .tags {
      justify-content: center;
    }
  }
</style>