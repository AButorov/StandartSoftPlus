---
// src/layouts/Layout.astro
interface Props {
  title?: string;
}

const { title = 'StandartSoft Plus' } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<!DOCTYPE html>
<html lang="ru">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <style>
      h1 {
        color: purple;
        font-size: 4rem;
      }
    </style>
    <link rel="icon" type="image/svg+xml" href={`${base}favicon.svg`} />
  </head>
  <body>
    <nav>
      <a href={base}>Главная</a>
      <a href={`${base}portfolio/`}>Наши работы</a>
    </nav>
    
    <main>
      <slot />
    </main>
  </body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>