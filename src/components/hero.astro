---
// Компонент Hero с брендированием
interface Props {
  title: string;
  slogan?: string;
  showCTA?: boolean;
}

const { title, slogan = "Innovate with Confidence, Code with Standards!", showCTA = true } = Astro.props;
---

<section class="hero">
  <div class="hero-content">
    <h1>{title}</h1>
    
    {slogan && (
      <p class="slogan">{slogan}</p>
    )}
    
    {showCTA && (
      <div class="hero-cta">
        <a href="#services" class="btn btn-primary">Наши услуги</a>
        <a href="#portfolio" class="btn btn-secondary">Портфолио</a>
      </div>
    )}
  </div>
</section>

<style>
  .hero {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 60vh;
    text-align: center;
    padding: var(--spacing-xl) var(--spacing-lg);
  }

  .hero-content {
    max-width: 900px;
  }

  .slogan {
    margin: var(--spacing-lg) 0;
    font-size: 1.25rem;
  }

  .hero-cta {
    display: flex;
    gap: var(--spacing-md);
    justify-content: center;
    margin-top: var(--spacing-xl);
  }

  @media (max-width: 768px) {
    .hero-cta {
      flex-direction: column;
      align-items: center;
    }
    
    .btn {
      width: 100%;
      max-width: 300px;
    }
  }
</style>