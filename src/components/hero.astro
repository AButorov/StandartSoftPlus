---
// src/components/hero.astro - Асимметричный hero (вариант 3)
interface Props {
  title: string;
  slogan?: string;
  showCTA?: boolean;
}

const { title, slogan = "Innovate with Confidence, Code with Standards!", showCTA = true } = Astro.props;
---

<section class="hero">
  <div class="hero-container">
    <div class="hero-content">
      <h1>{title}</h1>
      {slogan && (
        <p class="slogan">{slogan}</p>
      )}
      {showCTA && (
        <div class="hero-cta">
          <a href="#services" class="btn btn-primary">Наши услуги</a>
          <a href="/portfolio/" class="btn btn-secondary">Портфолио</a>
        </div>
      )}
    </div>
    <div class="hero-decoration">
      <div class="decoration-circle">
        <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M12 2L2 7l10 5 10-5-10-5z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          <path d="M2 17l10 5 10-5M2 12l10 5 10-5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </div>
    </div>
  </div>
</section>

<style>
  /* Hero секция - асимметричный дизайн */
  .hero {
    padding: 5rem 2rem;
    background: white;
    position: relative;
    overflow: hidden;
    min-height: 60vh;
    display: flex;
    align-items: center;
  }

  .hero::before {
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    width: 40%;
    height: 100%;
    background: linear-gradient(135deg, rgba(61, 17, 57, 0.03), rgba(229, 28, 39, 0.05));
    clip-path: polygon(30% 0, 100% 0, 100% 100%, 0% 100%);
  }

  .hero-container {
    max-width: 1100px;
    margin: 0 auto;
    width: 100%;
    position: relative;
    z-index: 1;
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 3rem;
    align-items: center;
  }

  .hero-content {
    text-align: left;
  }

  h1 {
    font-family: var(--font-heading);
    font-weight: 200;
    font-size: 3.5rem;
    margin-bottom: 1rem;
    line-height: 1.1;
    background: var(--gradient-brand);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .slogan {
    font-family: var(--font-body);
    font-size: 1.25rem;
    color: var(--color-text);
    opacity: 0.8;
    margin-bottom: 2rem;
    text-transform: none;
    letter-spacing: normal;
  }

  .hero-decoration {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .decoration-circle {
    width: 200px;
    height: 200px;
    background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 20px 60px rgba(61, 17, 57, 0.2);
    position: relative;
  }

  .decoration-circle::before {
    content: '';
    position: absolute;
    width: 100%;
    height: 100%;
    border-radius: 50%;
    border: 3px solid var(--color-secondary);
    opacity: 0.3;
    animation: pulse 3s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% {
      transform: scale(1);
      opacity: 0.3;
    }
    50% {
      transform: scale(1.15);
      opacity: 0;
    }
  }

  .decoration-circle svg {
    width: 100px;
    height: 100px;
    color: white;
  }

  /* CTA кнопки */
  .hero-cta {
    display: flex;
    gap: 1rem;
    margin-top: 2rem;
    flex-wrap: wrap;
  }

  .btn {
    display: inline-block;
    padding: 1rem 2rem;
    font-family: var(--font-body);
    font-weight: 700;
    letter-spacing: 0.04em;
    text-transform: uppercase;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
    font-size: 0.95rem;
  }

  .btn-primary {
    background: var(--gradient-brand);
    color: white;
    box-shadow: 0 4px 20px rgba(61, 17, 57, 0.15);
  }

  .btn-primary:hover {
    box-shadow: 0 8px 30px rgba(61, 17, 57, 0.25);
    transform: translateY(-2px);
  }

  .btn-secondary {
    background: transparent;
    color: var(--color-secondary);
    border: 2px solid var(--color-secondary);
  }

  .btn-secondary:hover {
    background: var(--color-secondary);
    color: white;
  }

  /* Адаптивность */
  @media (max-width: 768px) {
    .hero {
      min-height: auto;
      padding: 3rem 1rem;
    }

    .hero-container {
      grid-template-columns: 1fr;
      text-align: center;
      gap: 2rem;
    }

    .hero-content {
      text-align: center;
    }

    h1 {
      font-size: 2.5rem;
    }

    .slogan {
      font-size: 1.125rem;
    }

    .decoration-circle {
      width: 150px;
      height: 150px;
    }

    .decoration-circle svg {
      width: 75px;
      height: 75px;
    }

    .hero-cta {
      flex-direction: column;
      align-items: center;
    }
    
    .btn {
      width: 100%;
      max-width: 300px;
    }
  }
</style>