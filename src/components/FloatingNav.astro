---
// Плавающая навигация с островками - исправленная TypeScript версия
const base = import.meta.env.BASE_URL;
---

<nav class="floating-nav">
  <div class="nav-container">
    <!-- Островок 1: Логотип с текстом -->
    <div class="nav-island logo-island">
      <a href={base} class="logo-link">
        <span class="logo-text">StandartSoft<span class="logo-plus">+</span></span>
      </a>
    </div>

    <!-- Островок 2: Основная навигация -->
    <div class="nav-island main-nav-island">
      <a href={base} class="nav-link">Главная</a>
      <a href="#contact" class="nav-link">Услуги</a>
      <a href={`${base}portfolio/`} class="nav-link">Портфолио</a>
      <a href="#contact" class="nav-link">Контакты</a>
    </div>

    <!-- Островок 3: Связь -->
    <div class="nav-island contact-island">
      <a href="#contact" class="contact-link" title="Связаться с нами">
        <svg class="contact-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M20 4H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z" fill="currentColor"/>
        </svg>
      </a>
    </div>

    <!-- Мобильное меню (бургер) -->
    <button class="mobile-menu-btn nav-island" id="mobileMenuBtn" aria-label="Открыть меню">
      <svg class="menu-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M3 6h18M3 12h18M3 18h18" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
      </svg>
    </button>
  </div>

  <!-- Мобильное выпадающее меню -->
  <div class="mobile-menu" id="mobileMenu">
    <div class="mobile-menu-content">
      <a href={base} class="mobile-menu-link">Главная</a>
      <a href={`${base}portfolio/`} class="mobile-menu-link">Портфолио</a>
      <a href="#contact" class="mobile-menu-link">Контакты</a>
      <a href="#contact" class="mobile-menu-link contact-item">
        <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M20 4H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z" fill="currentColor"/>
        </svg>
        Связаться
      </a>
    </div>
  </div>
</nav>

<script>
  // Мобильное меню
  const mobileMenuBtn = document.getElementById('mobileMenuBtn');
  const mobileMenu = document.getElementById('mobileMenu');
  
  if (mobileMenuBtn && mobileMenu) {
    mobileMenuBtn.addEventListener('click', () => {
      mobileMenu.classList.toggle('active');
      mobileMenuBtn.classList.toggle('active');
    });

    // Закрытие при клике вне меню
    document.addEventListener('click', (e: MouseEvent) => {
      const target = e.target as Node;
      if (!mobileMenu.contains(target) && !mobileMenuBtn.contains(target)) {
        mobileMenu.classList.remove('active');
        mobileMenuBtn.classList.remove('active');
      }
    });

    // Закрытие при клике на ссылку
    const mobileLinks = mobileMenu.querySelectorAll('.mobile-menu-link');
    mobileLinks.forEach(link => {
      link.addEventListener('click', () => {
        mobileMenu.classList.remove('active');
        mobileMenuBtn.classList.remove('active');
      });
    });
  }

  // Активная ссылка
  const currentPath = window.location.pathname;
  const navLinks = document.querySelectorAll<HTMLAnchorElement>('.nav-link, .mobile-menu-link');
  
  navLinks.forEach(link => {
    const linkPath = new URL(link.href).pathname;
    if (linkPath === currentPath) {
      link.classList.add('active');
    }
  });

  // Скрытие/показ навигации при скролле
  let lastScroll = 0;
  const nav = document.querySelector('.floating-nav');
  
  window.addEventListener('scroll', () => {
    const currentScroll = window.pageYOffset;
    
    if (currentScroll <= 0) {
      nav?.classList.remove('scroll-up');
      return;
    }
    
    if (currentScroll > lastScroll && !nav?.classList.contains('scroll-down')) {
      // Скролл вниз
      nav?.classList.remove('scroll-up');
      nav?.classList.add('scroll-down');
    } else if (currentScroll < lastScroll && nav?.classList.contains('scroll-down')) {
      // Скролл вверх
      nav?.classList.remove('scroll-down');
      nav?.classList.add('scroll-up');
    }
    lastScroll = currentScroll;
  });
</script>

<style>
  /* Контейнер навигации */
  .floating-nav {
    position: fixed;
    top: 1.5rem;
    left: 50%;
    transform: translateX(-50%);
    z-index: 1000;
    transition: transform 0.3s ease;
  }

  .floating-nav.scroll-down {
    transform: translateX(-50%) translateY(-120%);
  }

  .floating-nav.scroll-up {
    transform: translateX(-50%) translateY(0);
  }

  .nav-container {
    display: flex;
    gap: 1rem;
    align-items: center;
  }

  /* Островки (общие стили) */
  .nav-island {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    border-radius: 50px;
    padding: 0.75rem 1.5rem;
    box-shadow: 
      0 4px 20px rgba(61, 17, 57, 0.08),
      0 1px 3px rgba(61, 17, 57, 0.12);
    border: 1px solid rgba(61, 17, 57, 0.05);
    transition: all 0.3s ease;
  }

  .nav-island:hover {
    box-shadow: 
      0 8px 30px rgba(61, 17, 57, 0.12),
      0 2px 6px rgba(61, 17, 57, 0.15);
    transform: translateY(-2px);
  }

  /* Островок 1: Логотип с текстом */
  .logo-island {
    padding: 0.5rem 1.25rem;
  }

  .logo-link {
    display: flex;
    align-items: center;
    text-decoration: none;
  }

  .logo-text {
    font-family: var(--font-heading);
    font-weight: 300;
    font-size: 1.125rem;
    letter-spacing: 0.02em;
    color: var(--color-primary);
    transition: color 0.2s ease;
  }

  .logo-plus {
    color: var(--color-secondary);
    font-weight: 400;
  }

  .logo-link:hover .logo-text {
    background: var(--gradient-brand);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  /* Островок 2: Основная навигация */
  .main-nav-island {
    display: flex;
    gap: 0.25rem;
  }

  .nav-link {
    padding: 0.5rem 1rem;
    font-family: var(--font-body);
    font-weight: 500;
    font-size: 0.95rem;
    color: var(--color-text);
    text-decoration: none;
    border-radius: 50px;
    transition: all 0.2s ease;
    position: relative;
  }

  .nav-link:hover {
    background: rgba(61, 17, 57, 0.05);
    color: var(--color-secondary);
  }

  .nav-link.active {
    background: var(--gradient-brand);
    color: white;
  }

  /* Островок 3: Связь */
  .contact-island {
    padding: 0.75rem;
  }

  .contact-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    color: white;
    background: var(--gradient-brand);
    border-radius: 50%;
    transition: all 0.2s ease;
  }

  .contact-link:hover {
    transform: scale(1.1) rotate(5deg);
    box-shadow: 0 4px 12px rgba(229, 28, 39, 0.3);
  }

  .contact-icon {
    width: 20px;
    height: 20px;
  }

  /* Мобильное меню (бургер) */
  .mobile-menu-btn {
    display: none;
    padding: 0.75rem;
    background: rgba(255, 255, 255, 0.95);
    border: none;
    cursor: pointer;
    color: var(--color-primary);
  }

  .mobile-menu-btn.active {
    background: var(--gradient-brand);
    color: white;
  }

  .menu-icon {
    width: 24px;
    height: 24px;
  }

  /* Выпадающее мобильное меню */
  .mobile-menu {
    position: fixed;
    top: 5.5rem;
    left: 50%;
    transform: translateX(-50%) translateY(-20px);
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
    z-index: 999;
  }

  .mobile-menu.active {
    transform: translateX(-50%) translateY(0);
    opacity: 1;
    visibility: visible;
  }

  .mobile-menu-content {
    background: rgba(255, 255, 255, 0.98);
    backdrop-filter: blur(10px);
    border-radius: 24px;
    padding: 1rem;
    box-shadow: 
      0 8px 32px rgba(61, 17, 57, 0.15),
      0 2px 8px rgba(61, 17, 57, 0.12);
    border: 1px solid rgba(61, 17, 57, 0.08);
    min-width: 200px;
  }

  .mobile-menu-link {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1.25rem;
    font-family: var(--font-body);
    font-weight: 500;
    color: var(--color-text);
    text-decoration: none;
    border-radius: 12px;
    transition: all 0.2s ease;
  }

  .mobile-menu-link:hover {
    background: rgba(61, 17, 57, 0.05);
    color: var(--color-secondary);
  }

  .mobile-menu-link.active {
    background: var(--gradient-brand);
    color: white;
  }

  .mobile-menu-link.contact-item {
    margin-top: 0.5rem;
    padding-top: 1rem;
    border-top: 1px solid rgba(61, 17, 57, 0.1);
  }

  .mobile-menu-link svg {
    width: 20px;
    height: 20px;
  }

  /* Адаптивность */
  @media (max-width: 768px) {
    .floating-nav {
      top: 1rem;
      left: 1rem;
      right: 1rem;
      transform: none;
      width: auto;
    }

    .floating-nav.scroll-down {
      transform: translateY(-120%);
    }

    .floating-nav.scroll-up {
      transform: translateY(0);
    }

    .nav-container {
      justify-content: space-between;
      width: 100%;
    }

    .main-nav-island,
    .contact-island {
      display: none;
    }

    .mobile-menu-btn {
      display: block;
    }

    .mobile-menu {
      left: 1rem;
      right: 1rem;
      transform: translateY(-20px);
      width: auto;
    }

    .mobile-menu.active {
      transform: translateY(0);
    }

    .mobile-menu-content {
      width: 100%;
    }

    .logo-text {
      font-size: 1rem;
    }
  }

  @media (min-width: 769px) and (max-width: 1024px) {
    .nav-link {
      padding: 0.5rem 0.75rem;
      font-size: 0.9rem;
    }

    .logo-text {
      font-size: 1rem;
    }
  }
</style>