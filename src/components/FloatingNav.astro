---
// src/components/FloatingNav.astro
const base = import.meta.env.BASE_URL;

// Определяем активную страницу
const currentPath = Astro.url.pathname;
---

<nav class="classic-nav">
  <div class="nav-container">
    <a href={base} class="logo-link">
      <img src={`${base}icon-nav.png`} alt="StandartSoft Plus" class="logo-icon">
      <span class="logo-text">StandartSoft<span class="logo-plus">+</span></span>
    </a>

    <ul class="nav-menu">
      <li class="nav-item">
        <a href={base} class={`nav-link ${currentPath === base ? 'active' : ''}`}>Главное</a>
      </li>
      <li class="nav-item">
        <a href={`${base}services/`} class={`nav-link ${currentPath.includes('/services') ? 'active' : ''}`}>Услуги</a>
      </li>
      <li class="nav-item">
        <a href={`${base}portfolio/`} class={`nav-link ${currentPath.includes('/portfolio') || currentPath.includes('/jobs') ? 'active' : ''}`}>Проекты</a>
      </li>
      <li class="nav-item has-dropdown">
        <a href={`${base}resources/`} class={`nav-link ${currentPath.includes('/resources') ? 'active' : ''}`}>
          Ресурсы
          <svg class="dropdown-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M6 9l6 6 6-6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path>
          </svg>
        </a>
        <div class="dropdown-menu">
          <a href={`${base}resources/faq/`} class="dropdown-link">Вопросы и ответы</a>
          <a href={`${base}resources/documents/`} class="dropdown-link">Документы</a>
          <a href={`${base}resources/process/`} class="dropdown-link">Как мы работаем</a>
        </div>
      </li>
      <li class="nav-item">
        <a href={`${base}contacts/`} class={`nav-link ${currentPath.includes('/contacts') ? 'active' : ''}`}>Контакты</a>
      </li>
    </ul>

    <button class="mobile-toggle" id="mobileToggle" aria-label="Открыть меню">
      <div class="burger-icon">
        <span class="burger-line"></span>
        <span class="burger-line"></span>
        <span class="burger-line"></span>
      </div>
    </button>
  </div>

  <!-- Мобильное меню -->
  <div class="mobile-menu" id="mobileMenu">
    <a href={base} class="mobile-link">Главное</a>
    <a href={`${base}services/`} class="mobile-link">Услуги</a>
    <a href={`${base}portfolio/`} class="mobile-link">Проекты</a>
    <div class="mobile-dropdown">
      <button class="mobile-dropdown-toggle" id="mobileResourcesToggle">
        Ресурсы
        <svg class="mobile-dropdown-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M6 9l6 6 6-6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path>
        </svg>
      </button>
      <div class="mobile-dropdown-content" id="mobileResourcesContent">
        <a href={`${base}resources/faq/`} class="mobile-link sub">Вопросы и ответы</a>
        <a href={`${base}resources/documents/`} class="mobile-link sub">Документы</a>
        <a href={`${base}resources/process/`} class="mobile-link sub">Как мы работаем</a>
      </div>
    </div>
    <a href={`${base}contacts/`} class="mobile-link">Контакты</a>
  </div>
</nav>

<style>
  /* Навигация */
  .classic-nav {
    background: var(--gradient-brand);
    box-shadow: 0 2px 10px rgba(61, 17, 57, 0.15);
    position: sticky;
    top: 0;
    z-index: 1000;
  }

  .nav-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 70px;
  }

  /* Логотип */
  .logo-link {
    display: flex;
    align-items: center;
    gap: 12px;
    text-decoration: none;
    transition: transform 0.2s ease;
  }

  .logo-link:hover {
    transform: scale(1.02);
  }

  .logo-icon {
    height: 48px;
    width: 48px;
    object-fit: contain;
  }

  .logo-text {
    font-family: var(--font-heading);
    font-weight: 300;
    font-size: 1.25rem;
    color: white;
    letter-spacing: 0.02em;
  }

  .logo-plus {
    color: white;
    font-weight: 400;
  }

  /* Меню */
  .nav-menu {
    display: flex;
    align-items: center;
    gap: 0;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .nav-item {
    position: relative;
  }

  .nav-link {
    display: flex;
    align-items: center;
    gap: 6px;
    padding: 0.75rem 1.25rem;
    color: white;
    text-decoration: none;
    font-family: var(--font-body);
    font-weight: 400;
    font-size: 0.95rem;
    text-transform: uppercase;
    letter-spacing: 0.04em;
    transition: all 0.2s ease;
    position: relative;
  }

  .nav-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 0;
    height: 2px;
    background: white;
    transition: width 0.2s ease;
  }

  .nav-link:hover::after,
  .nav-link.active::after {
    width: 80%;
  }

  .dropdown-icon {
    width: 14px;
    height: 14px;
    transition: transform 0.2s ease;
  }

  .nav-item.has-dropdown:hover .dropdown-icon {
    transform: rotate(180deg);
  }

  /* Dropdown меню */
  .dropdown-menu {
    position: absolute;
    top: 100%;
    left: 0;
    background: white;
    border-radius: 8px;
    box-shadow: 0 4px 20px rgba(61, 17, 57, 0.15);
    opacity: 0;
    visibility: hidden;
    transform: translateY(-10px);
    transition: all 0.2s ease;
    min-width: 220px;
    padding: 0.5rem 0;
    margin-top: 0.5rem;
    overflow: hidden;
  }

  .nav-item.has-dropdown:hover .dropdown-menu {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }

  .dropdown-link {
    display: block;
    padding: 0.75rem 1.25rem;
    color: var(--color-text);
    text-decoration: none;
    font-size: 0.9rem;
    font-weight: 400;
    text-transform: none;
    letter-spacing: normal;
    transition: all 0.2s ease;
    position: relative;
    width: 100%;
    box-sizing: border-box;
  }

  .dropdown-link::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 0;
    background: var(--color-secondary);
    transition: width 0.2s ease;
    z-index: 1;
  }

  .dropdown-link:hover {
    background: rgba(61, 17, 57, 0.05);
    color: var(--color-secondary);
  }

  .dropdown-link:hover::before {
    width: 4px;
  }

  /* Мобильное меню */
  .mobile-toggle {
    display: none;
    background: none;
    border: none;
    color: white;
    cursor: pointer;
    padding: 0.5rem;
  }

  .burger-icon {
    width: 28px;
    height: 20px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .burger-line {
    width: 100%;
    height: 3px;
    background: white;
    border-radius: 2px;
    transition: all 0.3s ease;
  }

  .mobile-toggle.active .burger-line:nth-child(1) {
    transform: translateY(8.5px) rotate(45deg);
  }

  .mobile-toggle.active .burger-line:nth-child(2) {
    opacity: 0;
  }

  .mobile-toggle.active .burger-line:nth-child(3) {
    transform: translateY(-8.5px) rotate(-45deg);
  }

  .mobile-menu {
    display: none;
    background: white;
    box-shadow: 0 4px 20px rgba(61, 17, 57, 0.15);
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease;
  }

  .mobile-menu.active {
    max-height: 600px;
  }

  .mobile-link {
    display: block;
    padding: 1rem 2rem;
    color: var(--color-text);
    text-decoration: none;
    font-weight: 500;
    border-bottom: 1px solid rgba(61, 17, 57, 0.05);
    transition: all 0.2s ease;
    position: relative;
  }

  .mobile-link::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 0;
    background: var(--color-secondary);
    transition: width 0.2s ease;
  }

  .mobile-link:hover,
  .mobile-link.active {
    background: rgba(61, 17, 57, 0.05);
    color: var(--color-secondary);
  }

  .mobile-link:hover::before {
    width: 4px;
  }

  .mobile-link.sub {
    padding-left: 3rem;
    font-size: 0.9rem;
    font-weight: 400;
  }

  .mobile-dropdown {
    border-bottom: 1px solid rgba(61, 17, 57, 0.05);
  }

  .mobile-dropdown-toggle {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem 2rem;
    background: none;
    border: none;
    color: var(--color-text);
    font-family: var(--font-body);
    font-weight: 500;
    font-size: 1rem;
    text-align: left;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .mobile-dropdown-toggle:hover,
  .mobile-dropdown-toggle.active {
    background: rgba(61, 17, 57, 0.05);
    color: var(--color-secondary);
  }

  .mobile-dropdown-icon {
    width: 16px;
    height: 16px;
    transition: transform 0.2s ease;
  }

  .mobile-dropdown-toggle.active .mobile-dropdown-icon {
    transform: rotate(180deg);
  }

  .mobile-dropdown-content {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease;
  }

  .mobile-dropdown-content.active {
    max-height: 300px;
  }

  /* Адаптивность */
  @media (max-width: 768px) {
    .nav-container {
      padding: 0 1rem;
    }

    .nav-menu {
      display: none;
    }

    .mobile-toggle {
      display: block;
    }

    .mobile-menu {
      display: block;
    }

    .logo-text {
      font-size: 1.1rem;
    }

    .logo-icon {
      height: 40px;
      width: 40px;
    }
  }

  @media (min-width: 769px) and (max-width: 1024px) {
    .nav-link {
      padding: 0.75rem 1rem;
      font-size: 0.9rem;
    }

    .logo-text {
      font-size: 1.1rem;
    }

    .logo-icon {
      height: 44px;
      width: 44px;
    }
  }
</style>

<script>
  // Мобильное меню
  const mobileToggle = document.getElementById('mobileToggle');
  const mobileMenu = document.getElementById('mobileMenu');
  const mobileResourcesToggle = document.getElementById('mobileResourcesToggle');
  const mobileResourcesContent = document.getElementById('mobileResourcesContent');

  if (mobileToggle && mobileMenu) {
    mobileToggle.addEventListener('click', () => {
      mobileToggle.classList.toggle('active');
      mobileMenu.classList.toggle('active');
    });
  }

  if (mobileResourcesToggle && mobileResourcesContent) {
    mobileResourcesToggle.addEventListener('click', () => {
      mobileResourcesToggle.classList.toggle('active');
      mobileResourcesContent.classList.toggle('active');
    });
  }

  // Закрытие мобильного меню при клике на ссылку
  document.querySelectorAll('.mobile-link').forEach(link => {
    link.addEventListener('click', () => {
      if (mobileToggle && mobileMenu) {
        mobileToggle.classList.remove('active');
        mobileMenu.classList.remove('active');
      }
    });
  });
</script>