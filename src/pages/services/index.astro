---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

const base = import.meta.env.BASE_URL;
const services = await getCollection('services');
const sortedServices = services.sort((a, b) => a.data.order - b.data.order);
---

<Layout title="Услуги - StandartSoft Plus">
  <!-- Hero секция -->
  <section class="services-hero">
    <div class="hero-container">
      <h1>Наши услуги</h1>
      <p class="hero-tagline">
        Комплексные решения для вашего бизнеса — от идеи до запуска
      </p>
    </div>
  </section>

  <!-- Список услуг -->
  <section class="services-list">
    <div class="services-container">
      <div class="services-grid">
        {sortedServices.map((service) => (
          <article class="service-card">
            <a href={`${base}services/${service.slug}/`} class="service-card-link">
              <div class="service-icon">{service.data.icon}</div>
              <h3>{service.data.title}</h3>
              <p class="service-description">{service.data.shortDescription}</p>
              
              <div class="service-meta">
                <div class="meta-item">
                  <span class="meta-label">Сроки:</span>
                  <span class="meta-value">{service.data.duration}</span>
                </div>
                <div class="meta-item">
                  <span class="meta-label">Стоимость:</span>
                  <span class="meta-value price">{service.data.price}</span>
                </div>
              </div>

              <div class="service-footer">
                <span class="service-link-text">Подробнее →</span>
              </div>
            </a>
          </article>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA блок -->
  <section class="services-cta">
    <div class="services-container">
      <div class="cta-card">
        <h2>Не нашли нужную услугу?</h2>
        <p>Свяжитесь с нами, и мы обсудим индивидуальное решение для вашего бизнеса</p>
        <a href={`${base}contacts/`} class="btn btn-primary">Связаться с нами</a>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Hero секция */
  .services-hero {
    padding: 5rem 2rem 3rem;
    background: linear-gradient(135deg, rgba(61, 17, 57, 0.03), rgba(229, 28, 39, 0.05));
    text-align: center;
  }

  .hero-container {
    max-width: 900px;
    margin: 0 auto;
  }

  h1 {
    font-family: var(--font-heading);
    font-weight: 300;
    font-size: 3.5rem;
    color: var(--color-primary);
    margin-bottom: 1.5rem;
    line-height: 1.2;
    background: none;
    -webkit-text-fill-color: var(--color-primary);
  }

  .hero-tagline {
    font-size: 1.25rem;
    color: var(--color-text);
    opacity: 0.8;
    line-height: 1.6;
  }

  /* Список услуг */
  .services-list {
    padding: 4rem 2rem;
    background: white;
  }

  .services-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 2rem;
  }

  .service-card {
    display: flex;
  }

  .service-card-link {
    display: flex;
    flex-direction: column;
    width: 100%;
    background: white;
    padding: 2rem;
    border-radius: 12px;
    box-shadow: 0 4px 20px rgba(61, 17, 57, 0.08);
    text-decoration: none;
    color: inherit;
    transition: all 0.3s ease;
    border: 2px solid transparent;
  }

  .service-card-link:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 40px rgba(61, 17, 57, 0.15);
    border-color: var(--color-primary);
  }

  .service-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .service-card h3 {
    font-family: var(--font-heading);
    font-weight: 400;
    font-size: 1.375rem;
    color: var(--color-primary);
    margin-bottom: 1rem;
    line-height: 1.4;
  }

  .service-description {
    color: var(--color-text);
    opacity: 0.8;
    line-height: 1.6;
    margin-bottom: 1.5rem;
    flex-grow: 1;
  }

  .service-meta {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    padding: 1rem 0;
    border-top: 1px solid rgba(61, 17, 57, 0.1);
    border-bottom: 1px solid rgba(61, 17, 57, 0.1);
    margin-bottom: 1rem;
  }

  .meta-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .meta-label {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-primary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .meta-value {
    font-size: 0.95rem;
    color: var(--color-text);
    font-weight: 600;
  }

  .meta-value.price {
    color: var(--color-secondary);
    font-size: 1.125rem;
  }

  .service-footer {
    display: flex;
    justify-content: flex-end;
  }

  .service-link-text {
    color: var(--color-primary);
    font-weight: 600;
    transition: transform 0.3s ease;
    display: inline-block;
  }

  .service-card-link:hover .service-link-text {
    transform: translateX(5px);
  }

  /* CTA блок */
  .services-cta {
    padding: 2rem;
    background: white;
  }

  .cta-card {
    background: linear-gradient(135deg, var(--color-primary), var(--color-accent-1));
    color: white;
    padding: 3rem;
    border-radius: 12px;
    text-align: center;
  }

  .cta-card h2 {
    font-family: var(--font-heading);
    font-weight: 300;
    font-size: 2rem;
    color: white;
    margin-bottom: 1rem;
    background: none;
    -webkit-text-fill-color: white;
  }

  .cta-card p {
    color: white;
    opacity: 0.95;
    margin-bottom: 2rem;
    font-size: 1.125rem;
  }

  .btn {
    display: inline-block;
    padding: 0.875rem 2rem;
    font-family: var(--font-body);
    font-weight: 700;
    letter-spacing: 0.04em;
    text-transform: uppercase;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
    font-size: 0.95rem;
  }

  .btn-primary {
    background: white;
    color: var(--color-primary);
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(255, 255, 255, 0.3);
  }

  /* Адаптивность */
  @media (max-width: 768px) {
    .services-hero {
      padding: 3rem 1rem 2rem;
    }

    h1 {
      font-size: 2.5rem;
    }

    .hero-tagline {
      font-size: 1.125rem;
    }

    .services-list {
      padding: 3rem 1rem;
    }

    .services-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .service-card-link {
      padding: 1.5rem;
    }

    .cta-card {
      padding: 2rem 1.5rem;
    }

    .cta-card h2 {
      font-size: 1.5rem;
    }

    .cta-card p {
      font-size: 1rem;
    }
  }

  @media (min-width: 769px) and (max-width: 1024px) {
    .services-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>