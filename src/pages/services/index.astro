    padding: 2rem;
    border-radius: 12px;
    box-shadow: 0 4px 20px rgba(61, 17, 57, 0.08);
    border: 1px solid rgba(61, 17, 57, 0.05);
    transition: all 0.3s ease;
  }

  .service-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 30px rgba(61, 17, 57, 0.12);
    border-color: var(--color-secondary);
  }

  .service-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .service-card h3 {
    font-family: var(--font-heading);
    font-weight: 300;
    color: var(--color-primary);
    margin-bottom: 1rem;
  }

