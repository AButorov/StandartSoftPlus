---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// Загружаем услуги из Content Collections
const allServices = await getCollection('services');
const services = allServices.sort((a, b) => a.data.order - b.data.order);
---

<Layout title="Услуги - StandartSoft Plus">
  <section class="hero-section">
    <div class="hero-container">
      <div class="hero-content">
        <h1>Наши услуги</h1>
        <p class="slogan">Профессиональная разработка мобильных приложений и веб-сервисов</p>
      </div>
      <div class="hero-decoration">
        <div class="decoration-circle">
          <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <rect x="3" y="3" width="7" height="7" rx="1.5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <rect x="14" y="3" width="7" height="7" rx="1.5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <rect x="14" y="14" width="7" height="7" rx="1.5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <rect x="3" y="14" width="7" height="7" rx="1.5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </div>
      </div>
    </div>
  </section>

  <section class="services-grid">
    <div class="container">
      {services.map((service) => (
        <div class="service-card">
          <div class="service-icon">{service.data.icon}</div>
          <h3>{service.data.title}</h3>
          <p>{service.data.description}</p>
          
          <ul class="service-features">
            {service.data.features.map((feature) => (
              <li>{feature}</li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </section>
</Layout>

<style>
  /* Hero секция */
  .hero-section {
    padding: 5rem 2rem;
    background: white;
    position: relative;
    overflow: hidden;
  }

  .hero-section::before {
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    width: 40%;
    height: 100%;
    background: linear-gradient(135deg, rgba(61, 17, 57, 0.03), rgba(229, 28, 39, 0.05));
    clip-path: polygon(30% 0, 100% 0, 100% 100%, 0% 100%);
  }

  .hero-container {
    max-width: 1100px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 3rem;
    align-items: center;
  }

  .hero-content {
    text-align: left;
  }

  h1 {
    font-family: var(--font-heading);
    font-weight: 300;
    font-size: 3.5rem;
    color: var(--color-primary);
    margin-bottom: 1rem;
    line-height: 1.2;
    background: none;
    -webkit-text-fill-color: var(--color-primary);
  }

  .slogan {
    font-family: var(--font-body);
    font-size: 1.125rem;
    color: var(--color-text);
    opacity: 0.8;
  }

  .hero-decoration {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .decoration-circle {
    width: 200px;
    height: 200px;
    background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 20px 60px rgba(61, 17, 57, 0.2);
    position: relative;
  }

  .decoration-circle::before {
    content: '';
    position: absolute;
    width: 100%;
    height: 100%;
    border-radius: 50%;
    border: 3px solid var(--color-secondary);
    opacity: 0.3;
    animation: pulse 3s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% {
      transform: scale(1);
      opacity: 0.3;
    }
    50% {
      transform: scale(1.15);
      opacity: 0;
    }
  }

  .decoration-circle svg {
    width: 100px;
    height: 100px;
    color: white;
  }

  /* Сетка услуг */
  .services-grid {
    padding: 4rem 2rem;
    background: linear-gradient(135deg, rgba(61, 17, 57, 0.02), rgba(229, 28, 39, 0.02));
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 2rem;
  }

  .service-card {
    background: white;
    padding: 2rem;
    border-radius: 12px;
    box-shadow: 0 4px 20px rgba(61, 17, 57, 0.08);
    border: 1px solid rgba(61, 17, 57, 0.05);
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
  }

  .service-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 30px rgba(61, 17, 57, 0.12);
    border-color: var(--color-secondary);
  }

  .service-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .service-card h3 {
    font-family: var(--font-heading);
    font-weight: 300;
    color: var(--color-primary);
    margin-bottom: 1rem;
  }

  .service-card p {
    color: var(--color-text);
    opacity: 0.8;
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }

  .service-features {
    list-style: none;
    padding: 0;
    margin: 0;
    margin-top: auto;
  }

  .service-features li {
    padding: 0.5rem 0;
    color: var(--color-text-muted);
    font-size: 0.95rem;
    position: relative;
    padding-left: 1.5rem;
  }

  .service-features li::before {
    content: "→";
    position: absolute;
    left: 0;
    color: var(--color-secondary);
    font-weight: bold;
  }

  /* Адаптивность */
  @media (max-width: 768px) {
    .hero-container {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .hero-content {
      text-align: center;
    }

    h1 {
      font-size: 2.5rem;
    }

    .decoration-circle {
      width: 150px;
      height: 150px;
    }

    .decoration-circle svg {
      width: 75px;
      height: 75px;
    }

    .container {
      grid-template-columns: 1fr;
    }
  }
</style>
