<style>
  /* Hero —Å–µ–∫—Ü–∏—è */
  .hero-section {
    padding: 5rem 2rem;
    background: white;
    position: relative;
    overflow: hidden;
  }

  .hero-section::before {
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    width: 40%;
    height: 100%;
    background: linear-gradient(135deg, rgba(61, 17, 57, 0.03), rgba(229, 28, 39, 0.05));
    clip-path: polygon(30% 0, 100% 0, 100% 100%, 0% 100%);
  }

  .hero-container {
    max-width: 1100px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 3rem;
    align-items: center;
  }

  .hero-content {
    text-align: left;
  }

  h1 {
    font-family: var(--font-heading);
    font-weight: 300;
    font-size: 3.5rem;
    color: var(--color-primary);
    margin-bottom: 1rem;
    line-height: 1.2;
    background: none;
    -webkit-text-fill-color: var(--color-primary);
  }

  .slogan {
    font-family: var(--font-body);
    font-size: 1.125rem;
    color: var(--color-text);
    opacity: 0.8;
  }

  .hero-decoration {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .decoration-circle {
    width: 200px;
    height: 200px;
    background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 20px 60px rgba(61, 17, 57, 0.2);
    position: relative;
  }

  .decoration-circle::before {
    content: '';
    position: absolute;
    width: 100%;
    height: 100%;
    border-radius: 50%;
    border: 3px solid var(--color-secondary);
    opacity: 0.3;
    animation: pulse 3s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% {
      transform: scale(1);
      opacity: 0.3;
    }
    50% {
      transform: scale(1.15);
      opacity: 0;
    }
  }

  .decoration-circle svg {
    width: 100px;
    height: 100px;
    color: white;
  }

  /* –°–µ—Ç–∫–∞ —É—Å–ª—É–≥ */
