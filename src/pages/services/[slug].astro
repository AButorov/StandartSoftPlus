---
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

const base = import.meta.env.BASE_URL;

export async function getStaticPaths() {
  const services = await getCollection('services');
  return services.map((service: CollectionEntry<'services'>) => ({
    params: { slug: service.slug },
    props: { service },
  }));
}

interface Props {
  service: CollectionEntry<'services'>;
}

const { service } = Astro.props;
const { Content } = await service.render();
---

<Layout title={`${service.data.title} - StandartSoft Plus`}>
  <!-- Hero секция -->
  <section class="service-hero">
    <div class="hero-container">
      <div class="hero-content">
        <div class="service-icon-hero">{service.data.icon}</div>
        <h1>{service.data.title}</h1>
        <p class="service-tagline">{service.data.shortDescription}</p>
        
        <div class="service-meta-hero">
          <div class="meta-item">
            <span class="meta-label">Сроки:</span>
            <span class="meta-value">{service.data.duration}</span>
          </div>
          <div class="meta-item">
            <span class="meta-label">Стоимость:</span>
            <span class="meta-value price">{service.data.price}</span>
          </div>
        </div>
      </div>
      
      <div class="hero-decoration">
        <div class="decoration-circle">
          <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M12 2L2 7l10 5 10-5-10-5z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M2 17l10 5 10-5M2 12l10 5 10-5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </div>
      </div>
    </div>
  </section>

  <!-- Основной контент -->
  <section class="service-details">
    <div class="service-container">
      <div class="service-content" data-base-path={base}>
        <Content />
      </div>
    </div>
  </section>

  <!-- CTA блок -->
  <section class="service-cta">
    <div class="service-container">
      <div class="cta-card">
        <h2>Готовы обсудить проект?</h2>
        <p>Оставьте заявку, и мы свяжемся с вами в течение рабочего дня</p>
        <a href={`${base}contacts/`} class="btn btn-primary">Связаться с нами</a>
      </div>
    </div>
  </section>

  <!-- Навигация к другим услугам -->
  <section class="service-navigation">
    <div class="service-container">
      <a href={`${base}#services`} class="back-link">
        <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M19 12H5M5 12l7 7m-7-7 7-7" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
        Все услуги
      </a>
    </div>
  </section>
</Layout>

<style>
  /* Hero секция */
  .service-hero {
    padding: 5rem 2rem;
    background: white;
    position: relative;
    overflow: hidden;
  }

  .service-hero::before {
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    width: 40%;
    height: 100%;
    background: linear-gradient(135deg, rgba(61, 17, 57, 0.03), rgba(229, 28, 39, 0.05));
    clip-path: polygon(30% 0, 100% 0, 100% 100%, 0% 100%);
  }

  .hero-container {
    max-width: 1100px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 3rem;
    align-items: center;
  }

  .hero-content {
    text-align: left;
  }

  .service-icon-hero {
    font-size: 4rem;
    margin-bottom: 1rem;
  }

  h1 {
    font-family: var(--font-heading);
    font-weight: 300;
    font-size: 3rem;
    color: var(--color-primary);
    margin-bottom: 1.5rem;
    line-height: 1.2;
    background: none;
    -webkit-text-fill-color: var(--color-primary);
  }

  .service-tagline {
    font-family: var(--font-body);
    font-size: 1.25rem;
    color: var(--color-text);
    opacity: 0.8;
    margin-bottom: 2rem;
    line-height: 1.6;
  }

  .service-meta-hero {
    display: flex;
    gap: 2rem;
    flex-wrap: wrap;
  }

  .meta-item {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .meta-label {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-primary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .meta-value {
    font-size: 1.125rem;
    color: var(--color-text);
    font-weight: 600;
  }

  .meta-value.price {
    color: var(--color-secondary);
    font-size: 1.5rem;
  }

  .hero-decoration {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .decoration-circle {
    width: 200px;
    height: 200px;
    background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 20px 60px rgba(61, 17, 57, 0.2);
    position: relative;
  }

  .decoration-circle::before {
    content: '';
    position: absolute;
    width: 100%;
    height: 100%;
    border-radius: 50%;
    border: 3px solid var(--color-secondary);
    opacity: 0.3;
    animation: pulse 3s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% {
      transform: scale(1);
      opacity: 0.3;
    }
    50% {
      transform: scale(1.15);
      opacity: 0;
    }
  }

  .decoration-circle svg {
    width: 100px;
    height: 100px;
    color: white;
  }

  /* Основной контент */
  .service-details {
    padding: 4rem 2rem;
    background: linear-gradient(135deg, rgba(61, 17, 57, 0.02), rgba(229, 28, 39, 0.02));
  }

  .service-container {
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .service-content {
    background: white;
    padding: 3rem;
    border-radius: 12px;
    box-shadow: 0 4px 20px rgba(61, 17, 57, 0.08);
    width: 100%;
  }

  /* CTA блок */
  .service-cta {
    padding: 2rem;
    background: white;
  }

  .cta-card {
    background: linear-gradient(135deg, var(--color-primary), var(--color-accent-1));
    color: white;
    padding: 3rem;
    border-radius: 12px;
    text-align: center;
  }

  .cta-card h2 {
    font-family: var(--font-heading);
    font-weight: 300;
    font-size: 2rem;
    color: white;
    margin-bottom: 1rem;
    background: none;
    -webkit-text-fill-color: white;
  }

  .cta-card p {
    color: white;
    opacity: 0.95;
    margin-bottom: 2rem;
    font-size: 1.125rem;
  }

  .btn {
    display: inline-block;
    padding: 0.875rem 2rem;
    font-family: var(--font-body);
    font-weight: 700;
    letter-spacing: 0.04em;
    text-transform: uppercase;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
    font-size: 0.95rem;
  }

  .btn-primary {
    background: white;
    color: var(--color-primary);
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(255, 255, 255, 0.3);
  }

  /* Навигация */
  .service-navigation {
    padding: 2rem;
    background: white;
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-secondary);
    text-decoration: none;
    font-weight: 600;
    transition: all 0.2s ease;
  }

  .back-link svg {
    width: 20px;
    height: 20px;
  }

  .back-link:hover {
    gap: 1rem;
    color: var(--color-primary);
  }

  /* Адаптивность */
  @media (max-width: 768px) {
    .hero-container {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .hero-content {
      text-align: center;
    }

    .service-icon-hero {
      font-size: 3rem;
    }

    h1 {
      font-size: 2rem;
    }

    .service-tagline {
      font-size: 1rem;
    }

    .service-meta-hero {
      justify-content: center;
    }

    .decoration-circle {
      width: 150px;
      height: 150px;
    }

    .decoration-circle svg {
      width: 75px;
      height: 75px;
    }

    .service-container {
      padding: 0 1rem;
    }

    .service-content {
      padding: 1.5rem;
    }

    .cta-card {
      padding: 2rem 1.5rem;
    }

    .cta-card h2 {
      font-size: 1.5rem;
    }

    .cta-card p {
      font-size: 1rem;
    }
  }

  @media (min-width: 769px) and (max-width: 1024px) {
    .service-container {
      max-width: 100%;
      padding: 0 2rem;
    }

    .service-content {
      padding: 2rem;
    }
  }
</style>

<script>
  // Исправление путей изображений для GitHub Pages
  function fixImagePaths() {
    const content = document.querySelector('.service-content');
    if (!content) return;

    const basePath = content.getAttribute('data-base-path') || '/';
    
    if (basePath === '/') return;

    const images = content.querySelectorAll('img');
    
    images.forEach((img) => {
      const src = img.getAttribute('src');
      
      if (src && src.startsWith('/') && !src.startsWith(basePath)) {
        img.setAttribute('src', basePath + src.substring(1));
      }
    });
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', fixImagePaths);
  } else {
    fixImagePaths();
  }
</script>