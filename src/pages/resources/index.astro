<!-- ===== РЕСУРСЫ (resources/index.astro) ===== -->
---
// src/pages/resources/index.astro
import Layout from '../../layouts/Layout.astro';

const base = import.meta.env.BASE_URL;
---

<Layout title="Ресурсы - StandartSoft Plus">
  <section class="hero-section">
    <div class="hero-container">
      <div class="hero-content">
        <h1>Ресурсы</h1>
        <p class="slogan">Полезные материалы и документация для наших клиентов</p>
      </div>
      <div class="hero-decoration">
        <div class="decoration-circle">
          <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </div>
      </div>
    </div>
  </section>

  <section class="resources-content">
    <div class="container">
      <a href={`${base}resources/faq/`} class="resource-card">
        <div class="resource-icon">
          <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2"/>
            <path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <circle cx="12" cy="17" r="1" fill="currentColor"/>
          </svg>
        </div>
        <h3>Вопросы и ответы</h3>
        <p>Часто задаваемые вопросы о наших услугах, процессах разработки и технологиях</p>
        <span class="resource-link">Перейти →</span>
      </a>

      <a href={`${base}resources/documents/`} class="resource-card">
        <div class="resource-icon">
          <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M14 2v6h6M16 13H8M16 17H8M10 9H8" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </div>
        <h3>Документы</h3>
        <p>Нормативные документы, договоры, техническая документация и прайс-листы</p>
        <span class="resource-link">Перейти →</span>
      </a>

      <a href={`${base}resources/process/`} class="resource-card">
        <div class="resource-icon">
          <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M12 2L2 7l10 5 10-5-10-5z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M2 17l10 5 10-5M2 12l10 5 10-5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </div>
        <h3>Как мы работаем</h3>
        <p>Прозрачный процесс разработки: от анализа задачи до поддержки готового продукта</p>
        <span class="resource-link">Перейти →</span>
      </a>
    </div>
  </section>
</Layout>

<style>
  /* Hero секция */
  .hero-section {
    padding: 5rem 2rem;
    background: white;
    position: relative;
    overflow: hidden;
  }

  .hero-section::before {
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    width: 40%;
    height: 100%;
    background: linear-gradient(135deg, rgba(61, 17, 57, 0.03), rgba(229, 28, 39, 0.05));
    clip-path: polygon(30% 0, 100% 0, 100% 100%, 0% 100%);
  }

  .hero-container {
    max-width: 1100px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 3rem;
    align-items: center;
  }

  .hero-content {
    text-align: left;
  }

  h1 {
    font-family: var(--font-heading);
    font-weight: 300;
    font-size: 3.5rem;
    color: var(--color-primary);
    margin-bottom: 1rem;
    line-height: 1.2;
    background: none;
    -webkit-text-fill-color: var(--color-primary);
  }

  .slogan {
    font-family: var(--font-body);
    font-size: 1.125rem;
    color: var(--color-text);
    opacity: 0.8;
    text-transform: none;
    letter-spacing: normal;
  }

  .hero-decoration {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .decoration-circle {
    width: 200px;
    height: 200px;
    background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 20px 60px rgba(61, 17, 57, 0.2);
    position: relative;
  }

  .decoration-circle::before {
    content: '';
    position: absolute;
    width: 100%;
    height: 100%;
    border-radius: 50%;
    border: 3px solid var(--color-secondary);
    opacity: 0.3;
    animation: pulse 3s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% { transform: scale(1); opacity: 0.3; }
    50% { transform: scale(1.15); opacity: 0; }
  }

  .decoration-circle svg {
    width: 100px;
    height: 100px;
    color: white;
  }

  /* Контент */
  .resources-content {
    padding: 4rem 2rem;
    background: linear-gradient(135deg, rgba(61, 17, 57, 0.02), rgba(229, 28, 39, 0.02));
  }

  .container {
    max-width: 1100px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .resource-card {
    background: white;
    padding: 2.5rem;
    border-radius: 16px;
    box-shadow: 0 4px 20px rgba(61, 17, 57, 0.08);
    border: 1px solid rgba(61, 17, 57, 0.05);
    text-decoration: none;
    color: var(--color-text);
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .resource-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 40px rgba(61, 17, 57, 0.15);
    border-color: var(--color-secondary);
  }

  .resource-icon {
    width: 64px;
    height: 64px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, var(--color-primary), var(--color-accent-1));
    border-radius: 12px;
    color: white;
    margin-bottom: 0.5rem;
  }

  .resource-icon svg {
    width: 36px;
    height: 36px;
  }

  .resource-card h3 {
    font-family: var(--font-heading);
    font-weight: 300;
    color: var(--color-primary);
    font-size: 1.5rem;
    margin: 0;
    background: none;
    -webkit-text-fill-color: var(--color-primary);
  }

  .resource-card p {
    color: var(--color-text);
    opacity: 0.8;
    line-height: 1.6;
    margin: 0;
    flex: 1;
  }

  .resource-link {
    color: var(--color-secondary);
    font-weight: 600;
    font-size: 0.95rem;
    margin-top: 0.5rem;
    transition: all 0.2s ease;
  }

  .resource-card:hover .resource-link {
    transform: translateX(4px);
    display: inline-block;
  }

  /* Адаптивность */
  @media (max-width: 768px) {
    .hero-container {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .hero-content {
      text-align: center;
    }

    h1 {
      font-size: 2.5rem;
    }

    .decoration-circle {
      width: 150px;
      height: 150px;
    }

    .decoration-circle svg {
      width: 75px;
      height: 75px;
    }

    .container {
      grid-template-columns: 1fr;
    }

    .resource-card {
      padding: 2rem;
    }
  }
</style>