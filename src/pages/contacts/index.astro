---
// src/pages/contacts/index.astro
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Контакты - StandartSoft Plus">
  <section class="hero-section">
    <div class="hero-container">
      <div class="hero-content">
        <h1>Контакты</h1>
        <p class="slogan">Свяжитесь с нами для обсуждения вашего проекта</p>
      </div>
      <div class="hero-decoration">
        <div class="decoration-circle">
          <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M22 16.92v3a2 2 0 01-2.18 2 19.79 19.79 0 01-8.63-3.07 19.5 19.5 0 01-6-6 19.79 19.79 0 01-3.07-8.67A2 2 0 014.11 2h3a2 2 0 012 1.72 12.84 12.84 0 00.7 2.81 2 2 0 01-.45 2.11L8.09 9.91a16 16 0 006 6l1.27-1.27a2 2 0 012.11-.45 12.84 12.84 0 002.81.7A2 2 0 0122 16.92z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </div>
      </div>
    </div>
  </section>

  <section class="contacts-content">
    <div class="container">
      <div class="contact-card">
        <div class="contact-icon">
          <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M20 4H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z" fill="currentColor"/>
          </svg>
        </div>
        <h3>Email</h3>
        <p><a href="mailto:info@standartsoftplus.ru">info@standartsoftplus.ru</a></p>
      </div>

      <div class="contact-card">
        <div class="contact-icon">
          <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </div>
        <h3>Telegram</h3>
        <p><a href="https://t.me/standartsoftplus" target="_blank">@standartsoftplus</a></p>
      </div>

      <div class="contact-card">
        <div class="contact-icon">
          <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M22 16.92v3a2 2 0 01-2.18 2 19.79 19.79 0 01-8.63-3.07 19.5 19.5 0 01-6-6 19.79 19.79 0 01-3.07-8.67A2 2 0 014.11 2h3a2 2 0 012 1.72 12.84 12.84 0 00.7 2.81 2 2 0 01-.45 2.11L8.09 9.91a16 16 0 006 6l1.27-1.27a2 2 0 012.11-.45 12.84 12.84 0 002.81.7A2 2 0 0122 16.92z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </div>
        <h3>Телефон</h3>
        <p><a href="tel:+79001234567">+7 (900) 123-45-67</a></p>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Hero секция */
  .hero-section {
    padding: 5rem 2rem;
    background: white;
    position: relative;
    overflow: hidden;
  }

  .hero-section::before {
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    width: 40%;
    height: 100%;
    background: linear-gradient(135deg, rgba(61, 17, 57, 0.03), rgba(229, 28, 39, 0.05));
    clip-path: polygon(30% 0, 100% 0, 100% 100%, 0% 100%);
  }

  .hero-container {
    max-width: 1100px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 3rem;
    align-items: center;
  }

  .hero-content {
    text-align: left;
  }

  h1 {
    font-family: var(--font-heading);
    font-weight: 300;
    font-size: 3.5rem;
    color: var(--color-primary);
    margin-bottom: 1rem;
    line-height: 1.2;
    background: none;
    -webkit-text-fill-color: var(--color-primary);
  }

  .slogan {
    font-family: var(--font-body);
    font-size: 1.125rem;
    color: var(--color-text);
    opacity: 0.8;
    text-transform: none;
    letter-spacing: normal;
  }

  .hero-decoration {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .decoration-circle {
    width: 200px;
    height: 200px;
    background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 20px 60px rgba(61, 17, 57, 0.2);
    position: relative;
  }

  .decoration-circle::before {
    content: '';
    position: absolute;
    width: 100%;
    height: 100%;
    border-radius: 50%;
    border: 3px solid var(--color-secondary);
    opacity: 0.3;
    animation: pulse 3s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% {
      transform: scale(1);
      opacity: 0.3;
    }
    50% {
      transform: scale(1.15);
      opacity: 0;
    }
  }

  .decoration-circle svg {
    width: 100px;
    height: 100px;
    color: white;
  }

  /* Контакты */
  .contacts-content {
    padding: 4rem 2rem;
    background: linear-gradient(135deg, rgba(61, 17, 57, 0.02), rgba(229, 28, 39, 0.02));
  }

  .container {
    max-width: 900px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }

  .contact-card {
    background: white;
    padding: 2rem;
    border-radius: 12px;
    box-shadow: 0 4px 20px rgba(61, 17, 57, 0.08);
    border: 1px solid rgba(61, 17, 57, 0.05);
    text-align: center;
    transition: all 0.3s ease;
  }

  .contact-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 30px rgba(61, 17, 57, 0.12);
    border-color: var(--color-secondary);
  }

  .contact-icon {
    width: 64px;
    height: 64px;
    margin: 0 auto 1.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, var(--color-primary), var(--color-accent-1));
    border-radius: 12px;
    color: white;
  }

  .contact-icon svg {
    width: 32px;
    height: 32px;
  }

  .contact-card h3 {
    font-family: var(--font-heading);
    font-weight: 300;
    color: var(--color-primary);
    margin-bottom: 1rem;
    background: none;
    -webkit-text-fill-color: var(--color-primary);
  }

  .contact-card p {
    margin: 0;
  }

  .contact-card a {
    color: var(--color-secondary);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s ease;
  }

  .contact-card a:hover {
    color: var(--color-primary);
    text-decoration: underline;
  }

  /* Адаптивность */
  @media (max-width: 768px) {
    .hero-container {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .hero-content {
      text-align: center;
    }

    h1 {
      font-size: 2.5rem;
    }

    .decoration-circle {
      width: 150px;
      height: 150px;
    }

    .decoration-circle svg {
      width: 75px;
      height: 75px;
    }

    .container {
      grid-template-columns: 1fr;
    }
  }
</style>