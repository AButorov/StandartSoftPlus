---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/hero.astro';
import ServicesCarousel from '../components/ServicesCarousel.astro';
import CTABlock from '../components/CTABlock.astro';

const base = import.meta.env.BASE_URL;
---

<Layout title="StandartSoft Plus - Разработка мобильных приложений и веб-сервисов">
  <!-- Hero секция -->
  <Hero 
    slogan="Innovate with Confidence, Code with Standards!"
  />

  <!-- О компании -->
  <section id="about" class="about-section">
    <div class="container-narrow">
      <h2 class="text-center">О нас</h2>
      <p class="lead text-center">
        Мы разрабатываем надёжное программное обеспечение для бизнеса. 
        Специализируемся на мобильных приложениях, веб-платформах и автоматизации бизнес-процессов.
      </p>
    </div>
  </section>

  <!-- Карусель услуг -->
  <ServicesCarousel />

  <!-- Портфолио (краткая версия) -->
  <section id="portfolio-preview" class="portfolio-preview-section">
    <div class="container">
      <h2 class="text-center">Наши проекты</h2>
      <p class="section-description text-center">
        Реализованные решения для бизнеса
      </p>
      
      <div class="portfolio-cta">
        <a href={`${base}portfolio/`} class="btn btn-primary">Смотреть портфолио</a>
      </div>
    </div>
  </section>

  <CTABlock 
    title="Свяжитесь с нами"
    description="Обсудим ваш проект и предложим оптимальное решение"
    buttonText="Связаться"
  />
</Layout>

<style>
  /* О компании */
  .about-section {
    padding: 5rem 2rem;
    background: white;
  }

  .container-narrow {
    max-width: 900px;
    margin: 0 auto;
  }

  h2 {
    font-family: var(--font-heading);
    font-weight: 300;
    font-size: 2.5rem;
    color: var(--color-primary);
    margin-bottom: 2rem;
  }

  .lead {
    font-size: 1.25rem;
    line-height: 1.8;
    color: var(--color-text);
    opacity: 0.9;
  }

  .text-center {
    text-align: center;
  }

  /* Превью портфолио */
  .portfolio-preview-section {
    padding: 5rem 2rem;
    background: white;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .section-description {
    color: var(--color-text);
    opacity: 0.8;
    margin-bottom: 3rem;
    font-size: 1.125rem;
  }

  .portfolio-cta {
    text-align: center;
    margin-top: 2rem;
  }

  /* Превью контактов */
  .contacts-preview-section {
    padding: 5rem 2rem;
    background: linear-gradient(135deg, rgba(61, 17, 57, 0.02), rgba(229, 28, 39, 0.02));
  }

  .contacts-cta {
    text-align: center;
    margin-top: 2rem;
  }

  /* Кнопки */
  .btn {
    display: inline-block;
    padding: 0.875rem 2rem;
    font-family: var(--font-body);
    font-weight: 700;
    letter-spacing: 0.04em;
    text-transform: uppercase;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
    font-size: 0.95rem;
  }

  .btn-primary {
    background: var(--gradient-brand);
    color: white;
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(61, 17, 57, 0.3);
  }

  .btn-secondary {
    background: white;
    color: var(--color-primary);
    border: 2px solid var(--color-primary);
  }

  .btn-secondary:hover {
    background: var(--color-primary);
    color: white;
  }

  /* Адаптивность */
  @media (max-width: 768px) {
    .about-section,
    .portfolio-preview-section,
    .contacts-preview-section {
      padding: 3rem 1rem;
    }

    h2 {
      font-size: 2rem;
    }

    .lead {
      font-size: 1.125rem;
    }

    .section-description {
      font-size: 1rem;
    }
  }
</style>