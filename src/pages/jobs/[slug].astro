---
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import CTABlock from '../../components/CTABlock.astro';

const base = import.meta.env.BASE_URL;

export async function getStaticPaths() {
  const jobs = await getCollection('jobs');
  return jobs.map((job: CollectionEntry<'jobs'>) => ({
    params: { slug: job.slug },
    props: { job },
  }));
}

interface Props {
  job: CollectionEntry<'jobs'>;
}

const { job } = Astro.props;
const { Content } = await job.render();
---

<Layout title={`${job.data.title} - StandartSoft Plus`}>
  <!-- Hero секция с асимметричным дизайном -->
  <section class="hero-section">
    <div class="hero-container">
      <div class="hero-content">
        <h1>{job.data.title}</h1>
        <p class="slogan">{job.data.description}</p>
        <div class="project-meta-hero">
          <div class="meta-badge">
            <span class="meta-label">Клиент:</span>
            <span class="meta-value">{job.data.client}</span>
          </div>
          <div class="meta-badge">
            <span class="meta-label">Статус:</span>
            <span class="meta-value status">{job.data.status}</span>
          </div>
        </div>
      </div>
      <div class="hero-decoration">
        <div class="decoration-circle">
          <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M22 4 12 14.01l-3-3" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </div>
      </div>
    </div>
  </section>

  <!-- Основной контент -->
  <section class="project-details">
    <div class="project-container">
      <div class="project-content" data-base-path={base}>
        <Content />
      </div>
    </div>
  </section>

  <CTABlock 
    title="Обсудим ваш проект?"
    description="Расскажите о своей идее, и мы предложим оптимальное решение"
    buttonText="Связаться с нами"
  />
  <!-- Навигация к другим проектам -->
  <section class="project-navigation">
    <div class="project-container">
      <a href={`${base}portfolio/`} class="back-link">
        <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M19 12H5M5 12l7 7m-7-7 7-7" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
        Все проекты
      </a>
    </div>
  </section>
</Layout>

<style>
  /* Hero секция */
  .hero-section {
    padding: 5rem 2rem;
    background: white;
    position: relative;
    overflow: hidden;
  }

  .hero-section::before {
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    width: 40%;
    height: 100%;
    background: linear-gradient(135deg, rgba(61, 17, 57, 0.03), rgba(229, 28, 39, 0.05));
    clip-path: polygon(30% 0, 100% 0, 100% 100%, 0% 100%);
  }

  .hero-container {
    max-width: 1100px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 3rem;
    align-items: center;
  }

  .hero-content {
    text-align: left;
  }

  h1 {
    font-family: var(--font-heading);
    font-weight: 300;
    font-size: 3.5rem;
    color: var(--color-primary);
    margin-bottom: 1rem;
    line-height: 1.2;
    background: none;
    -webkit-text-fill-color: var(--color-primary);
  }

  .slogan {
    font-family: var(--font-body);
    font-size: 1.25rem;
    color: var(--color-text);
    opacity: 0.8;
    margin-bottom: 2rem;
    text-transform: none;
    letter-spacing: normal;
  }

  .project-meta-hero {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .meta-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: rgba(61, 17, 57, 0.05);
    border-radius: 8px;
    font-size: 0.9rem;
  }

  .meta-label {
    font-weight: 600;
    color: var(--color-primary);
  }

  .meta-value {
    color: var(--color-text);
    opacity: 0.8;
  }

  .meta-value.status {
    background: var(--gradient-brand);
    color: white;
    padding: 0.25rem 0.75rem;
    border-radius: 4px;
    font-weight: 600;
  }

  .hero-decoration {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .decoration-circle {
    width: 200px;
    height: 200px;
    background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 20px 60px rgba(61, 17, 57, 0.2);
    position: relative;
  }

  .decoration-circle::before {
    content: '';
    position: absolute;
    width: 100%;
    height: 100%;
    border-radius: 50%;
    border: 3px solid var(--color-secondary);
    opacity: 0.3;
    animation: pulse 3s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% {
      transform: scale(1);
      opacity: 0.3;
    }
    50% {
      transform: scale(1.15);
      opacity: 0;
    }
  }

  .decoration-circle svg {
    width: 100px;
    height: 100px;
    color: white;
  }

  /* Основной контент */
  .project-details {
    padding: 4rem 2rem;
    background: linear-gradient(135deg, rgba(61, 17, 57, 0.02), rgba(229, 28, 39, 0.02));
  }

  .project-container {
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .project-content {
    background: white;
    padding: 2.5rem;
    border-radius: 12px;
    box-shadow: 0 4px 20px rgba(61, 17, 57, 0.08);
    width: 100%;
  }

  /* CTA блок */
  .project-cta {
    padding: 2rem;
    background: white;
  }

  .cta-card {
    background: linear-gradient(135deg, var(--color-primary), var(--color-accent-1));
    color: white;
    padding: 3rem;
    border-radius: 12px;
    text-align: center;
  }

  .cta-card h2 {
    font-family: var(--font-heading);
    font-weight: 300;
    font-size: 2rem;
    color: white;
    margin-bottom: 1rem;
    background: none;
    -webkit-text-fill-color: white;
  }

  .cta-card p {
    color: white;
    opacity: 0.95;
    margin-bottom: 2rem;
    font-size: 1.125rem;
  }

  .btn {
    display: inline-block;
    padding: 0.875rem 2rem;
    font-family: var(--font-body);
    font-weight: 700;
    letter-spacing: 0.04em;
    text-transform: uppercase;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
    font-size: 0.95rem;
  }

  .btn-primary {
    background: white;
    color: var(--color-primary);
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(255, 255, 255, 0.3);
  }

  /* Навигация */
  .project-navigation {
    padding: 2rem;
    background: white;
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-secondary);
    text-decoration: none;
    font-weight: 600;
    transition: all 0.2s ease;
  }

  .back-link svg {
    width: 20px;
    height: 20px;
  }

  .back-link:hover {
    gap: 1rem;
    color: var(--color-primary);
  }

  /* Адаптивность */
  @media (max-width: 768px) {
    .hero-container {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .hero-content {
      text-align: center;
    }

    h1 {
      font-size: 2.5rem;
    }

    .slogan {
      font-size: 1.125rem;
    }

    .project-meta-hero {
      justify-content: center;
    }

    .decoration-circle {
      width: 150px;
      height: 150px;
    }

    .decoration-circle svg {
      width: 75px;
      height: 75px;
    }

    .project-container {
      padding: 0 1rem;
    }

    .project-content {
      padding: 1.5rem;
    }

    .cta-card {
      padding: 2rem 1.5rem;
    }

    .cta-card h2 {
      font-size: 1.5rem;
    }

    .cta-card p {
      font-size: 1rem;
    }
  }

  @media (min-width: 769px) and (max-width: 1024px) {
    .project-container {
      max-width: 100%;
      padding: 0 2rem;
    }

    .project-content {
      padding: 2rem;
    }
  }
</style>

<script>
  // Исправление путей изображений для GitHub Pages
  function fixImagePaths() {
    const content = document.querySelector('.project-content');
    if (!content) return;

    const basePath = content.getAttribute('data-base-path') || '/';
    
    // Исправляем пути только если basePath не корень
    if (basePath === '/') return;

    // Находим все изображения
    const images = content.querySelectorAll('img');
    
    images.forEach((img) => {
      const src = img.getAttribute('src');
      
      // Если путь начинается с / но не с basePath - добавляем basePath
      if (src && src.startsWith('/') && !src.startsWith(basePath)) {
        img.setAttribute('src', basePath + src.substring(1));
      }
    });
  }

  // Запускаем при загрузке DOM
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', fixImagePaths);
  } else {
    fixImagePaths();
  }
</script>